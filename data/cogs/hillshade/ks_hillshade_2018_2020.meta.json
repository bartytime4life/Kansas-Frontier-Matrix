  "type": "raster-derivative",
  "product": "hillshade",

  "title": "Kansas Hillshade (2018–2020, 1 m DEM Derived)",
  "description": "Statewide hillshade visualization of Kansas, derived from the 1-meter DEM collected between 2018 and 2020 under USGS 3DEP. Useful for terrain visualization, geomorphological interpretation, and historical landscape context.",

  "collection": "ks_hillshade",

  "spatial": {
    "bbox": [-102.05, 36.99, -94.60, 40.00],
    "resolution_m": 1.0,
    "proj": {
      "epsg": 26914,
      "note": "Stored in the DEM’s working CRS (KS commonly UTM 14N: EPSG:26914). If your hillshade is in a different CRS (e.g., EPSG:6344 or EPSG:4326), update this value."
    },
    "grid": {
      "pixel_encoding": "center",
      "alignment": "DEM-aligned"
    }
  },

  "temporal": {
    "start": "2018-01-01",
    "end": "2020-12-31"
  },

  "providers": [
    {
      "name": "USGS 3D Elevation Program (3DEP)",
      "roles": ["producer", "licensor"],
      "url": "https://www.usgs.gov/3d-elevation-program"
    },
    {
      "name": "Kansas Data Access and Support Center (DASC)",
      "roles": ["host", "distributor"],
      "url": "https://kansasgis.org"
    }
  ],

