    },
    "thumbnail": {
      "href": "data/cogs/hillshade/ks_hillshade_2018_2020_preview.png",
      "type": "image/png",
      "title": "PNG Preview",
      "roles": ["thumbnail", "overview"]
    }
  },

  "processing": {
    "software": {
      "gdal": ">=3.6",
      "gdaldem": "hillshade"
    },
    "parameters": {
      "gdaldem_hillshade": {
        "alt": 45,
        "az": 315,
        "multidirectional": false,
        "z_factor": 1.0,
        "scale": 1.0,
        "compute_edges": true
      }
    },
    "commands": [
      "gdaldem hillshade -alt 45 -az 315 -compute_edges -of GTiff data/cogs/dem/ks_1m_dem_2018_2020.tif /tmp/ks_hillshade_2018_2020.tif",
      "gdal_translate -of COG -co COMPRESS=DEFLATE -co PREDICTOR=2 -co BLOCKSIZE=512 -co NUM_THREADS=ALL_CPUS -co BIGTIFF=IF_SAFER -co OVERVIEW_RESAMPLING=AVERAGE /tmp/ks_hillshade_2018_2020.tif data/cogs/hillshade/ks_hillshade_2018_2020.tif"
    ],
    "cog_profile": {
      "compress": "DEFLATE",
      "predictor": 2,
      "tiling": true,
      "tile_width": 512,
      "tile_height": 512,
      "overviews": {
        "build": true,
        "resampling": "AVERAGE",
        "levels": "auto"
      }
    }
  },

  "validation": {
    "gdalinfo_summary": {
      "driver": "COG",
      "channels": 1,
      "dtype": "Byte",
      "overviews": "present",
      "checksum": null
    },
    "checks": [
      "jq -e 'type==\"object\"' data/cogs/hillshade/ks_hillshade_2018_2020.meta.json",
      "sha256sum -c data/cogs/hillshade/ks_hillshade_2018_2020.tif.sha256"
    ]
