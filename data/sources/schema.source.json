{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Source Descriptor",
  "type": "object",
  "required": ["id", "type", "endpoint", "spatial", "license"],
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9_\\-]+$" },
    "title": { "type": "string" },
    "type": { "enum": ["raster", "raster-dem", "vector"] },
    "endpoint": {
      "type": "object",
      "oneOf": [
        { "properties": { "type": { "const": "arcgis" }, "url": { "type": "string" } }, "required": ["type","url"]},
        { "properties": { "type": { "const": "http" }, "url": { "type": "string" } }, "required": ["type","url"]},
        { "properties": { "type": { "const": "http" }, "urls": { "type": "array", "items": { "type": "string" } } }, "required": ["type","urls"]}
      ]
    },
    "spatial": {
      "type": "object",
      "properties": {
        "bbox": { "type": "array", "items": { "type": "number" }, "minItems": 4, "maxItems": 4 },
        "crs": { "type": "string" }
      },
      "required": ["bbox","crs"]
    },
    "temporal": {
      "type": "object",
      "properties": { "start": { "type": "string", "format": "date" }, "end": { "type": "string", "format": "date" } }
    },
    "license": { "type": "string" },
    "provenance": { "type": "object" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "outputs": { "type": "object" }
  }
}
