{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kansas-frontier-matrix.org/schemas/source.schema.json",
  "title": "Source Descriptor",
  "type": "object",
  "additionalProperties": false,

  "required": ["id", "type", "spatial", "license"],

  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9_\\-]+$" },
    "title": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "version": { "type": "string" },

    "type": {
      "type": "string",
      "enum": ["raster", "raster-dem", "raster-visual", "vector"]
    },

    "endpoint": { "$ref": "#/$defs/endpoint" },

    "endpoints": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/endpoint" }
    },

    "spatial": {
      "type": "object",
      "additionalProperties": false,
      "required": ["bbox", "crs"],
      "properties": {
        "bbox": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4
        },
        "crs": {
          "type": "string",
          "pattern": "^EPSG:\\d+$"
        },
        "gsd": { "type": "number", "minimum": 0 }
      }
    },

    "temporal": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "start": { "type": "string", "format": "date" },
        "end": { "type": "string", "format": "date" }
      }
    },

    "providers": {
      "type": "array",
      "items": { "$ref": "#/$defs/provider" }
    },

    "license": { "type": "string" },

    "provenance": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "retrieved": { "type": "string", "format": "date-time" },
        "processing": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": { "type": "string" }
      }
    },

    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },

    "assets": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/asset" }
    },

    "outputs": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "catalog_items": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "validation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "checks": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "consumers": {
      "type": "object",
      "description": "Hints for downstream viewers/tilers (free-form by design).",
      "additionalProperties": true
    },

    "keywords": {
      "type": "array",
      "items": { "type": "string" }
    },

    "last_updated": { "type": "string", "format": "date" }
  },

  "allOf": [
    {
      "anyOf": [
        { "required": ["endpoint"] },
        { "required": ["endpoints"] }
      ]
    }
  ],

  "$defs": {
    "endpoint": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "url"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "arcgis",
            "arcgis-imageserver",
            "arcgis-mapserver",
            "http",
            "tilejson",
            "wms",
            "wmts"
          ]
        },
        "role": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["source", "preview", "mirror"]
          },
          "uniqueItems": true
        },
        "url": { "type": "string", "format": "uri" },
        "urls": {
          "type": "array",
          "items": { "type": "string", "format": "uri" },
          "minItems": 1
        },
        "capabilities": {
          "type": "object",
          "additionalProperties": true
        },
        "templates": {
          "type": "object",
          "additionalProperties": { "type": "string", "format": "uri" }
        },
        "notes": { "type": "string" }
      },
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "http" } }
          },
          "then": {
            "anyOf": [
              { "required": ["url"] },
              { "required": ["urls"] }
            ]
          }
        }
      ]
    },

    "provider": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "roles"],
      "properties": {
        "name": { "type": "string" },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "producer",
              "licensor",
              "host",
              "distributor",
              "processor",
              "curator",
              "editor"
            ]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "url": { "type": "string", "format": "uri" }
      }
    },

    "asset": {
      "type": "object",
      "additionalProperties": false,
      "required": ["href", "type"],
      "properties": {
        "href": { "type": "string" },
        "type": { "type": "string" },
        "roles": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "meta": { "type": "string" },
        "sha256": { "type": "string" },
        "stac": { "type": "string" },
        "title": { "type": "string" }
      }
    }
  }
}
