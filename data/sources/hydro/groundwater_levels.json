  "transform": {
    "class": "nwis_gwlevels",
    "time_series": {
      "format": "rdb",
      "primary_url": "https://waterservices.usgs.gov/nwis/gwlevels?format=rdb&stateCd=ks",
      "datetime_field": "lev_dt",
      "value_field": "lev_va",
      "site_id_field": "site_no",
      "units_field": "lev_units",
      "remarks_field": "lev_acy_cd"
    },
    "sites": {
      "format": "rdb",
      "primary_url": "https://waterservices.usgs.gov/nwis/site/?format=rdb&stateCd=ks&siteType=GW",
      "site_id_field": "site_no",
      "lat_field": "dec_lat_va",
      "lon_field": "dec_long_va",
      "elev_field": "alt_va",
      "datum_field": "alt_datum_cd"
    },
    "join": {
      "left": "time_series.site_no",
      "right": "sites.site_no",
      "how": "inner"
    },
    "outputs": {
      "points_geojson": "data/processed/hydro/groundwater_wells_ks.geojson",
      "timeseries_parquet": "data/processed/hydro/groundwater_levels_ks.parquet"
    },
    "notes": "After join, emit well points with latest measurement for mapping, and a long timeseries table for analytics."
  }
