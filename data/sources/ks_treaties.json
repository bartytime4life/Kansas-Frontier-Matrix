{
  "id": "ks_treaties",
  "title": "Treaty & Tribal Land Boundaries (time-aware vectors)",
  "type": "vector",
  "version": "1.0.1",
  "description": "Time-aware treaty and tribal boundary polygons for Kansas and nearby areas, aligned to EPSG:4326 and curated for use with DEM-derived context layers.",

  "endpoints": [
    {
      "type": "http",
      "role": ["source", "preview"],
      "url": "https://example.org/kansas_treaties.geojson",
      "notes": "Replace with the curated local path (see assets.paths.primary) once vetted."
    }
  ],

  "spatial": {
    "bbox": [-102.10, 36.99, -94.60, 40.00],
    "crs": "EPSG:4326"
  },
  "temporal": {
    "start": "1800-01-01",
    "end": "1900-12-31"
  },

  "providers": [
    { "name": "Archival sources (compiled)", "roles": ["producer"] },
    { "name": "Kansas-Frontier-Matrix", "roles": ["curator", "editor"] }
  ],
  "license": "CC-BY-4.0",

  "provenance": {
    "attribution": "Compiled from archival sources",
    "retrieved": "2025-09-18T02:00:00Z",
    "notes": "Digitized and reconciled across multiple editions; feature properties carry per-record citations where available."
  },

  "schema": {
    "geometry_type": "Polygon",
    "properties": {
      "id": "string",
      "name": "string",
      "tribe": "string",
      "year": "integer",
      "start_date": "string",
      "end_date": "string",
      "source": "string",
      "confidence": "number",
      "notes": "string"
    },
    "time_fields": {
      "primary": "year",
      "range": ["start_date", "end_date"]
    }
  },

  "assets": {
    "paths": {
      "primary": "data/processed/dem/vectors/treaties.geojson",
      "sha256": "data/processed/dem/vectors/treaties.sha256",
      "meta": null,
      "preview": null
    }
  },

  "outputs": {
    "catalog_items": [
      "data/processed/dem/vectors/treaties.geojson",
      "data/processed/dem/vectors/treaties.sha256"
    ]
  },

  "validation": {
    "checks": [
      "jq -e 'type==\"object\"' data/sources/ks_treaties.json",
      "jq -e '.type==\"FeatureCollection\"' data/processed/dem/vectors/treaties.geojson"
    ]
  },

  "consumers": {
    "maplibre": {
      "vector_stub": {
        "id": "ks_treaties",
        "type": "geojson",
        "data": "data/processed/dem/vectors/treaties.geojson"
      },
      "time_slider": {
        "field": "year",
        "range_fields": ["start_date", "end_date"]
      }
    },
    "qgis": {
      "add_layer_hint": "Open the local GeoJSON (paths.primary) for editing; keep CRS=EPSG:4326."
    }
  },

  "keywords": ["Kansas", "treaties", "tribal land", "historical", "vectors"],
  "last_updated": "2025-09-20"
}
