{
  "id": "ks_aspect",
  "title": "Kansas Aspect (derived from DEM)",
  "description": "Statewide aspect (0–360° azimuth from north) derived from the 1 m DEM (2018–2020), as a Cloud-Optimized GeoTIFF with optional categorical aspect sectors.",
  "license": "Public domain / open data (derived from state/USGS DEM).",
  "providers": [
    { "name": "Kansas Data Access & Support Center (DASC)", "roles": ["host"], "url": "https://data.kansasgis.org/" },
    { "name": "USGS 3DEP / state LiDAR", "roles": ["producer"], "url": "https://www.usgs.gov/core-science-systems/ngp/3dep" }
  ],
  "assets": {
    "dem": {
      "href": "../cogs/dem/ks_1m_dem_2018_2020.tif",
      "type": "image/tiff; application=geotiff; profile=cloud-optimized",
      "title": "DEM (1 m COG)",
      "roles": ["source"]
    },
    "aspect_cog": {
      "href": "../cogs/terrain/ks_aspect_deg.tif",
      "type": "image/tiff; application=geotiff; profile=cloud-optimized",
      "title": "Aspect (0–360°, degrees, COG)",
      "roles": ["data"]
    },
    "aspect_sectors": {
      "href": "../processed/vectors/aspect_sectors.geojson",
      "type": "application/geo+json",
      "title": "Aspect sectors (N, NE, E, SE, S, SW, W, NW)",
      "roles": ["data"]
    },
    "metadata": {
      "href": "./ks_aspect.meta.json",
      "type": "application/json",
      "title": "Processing & lineage metadata",
      "roles": ["metadata"]
    }
  },
  "processing": {
    "method": "gdaldem aspect",
    "units": "degrees",
    "azimuth_system": "0/360° = north, 90° = east",
    "nodata": "match DEM",
    "sectors_deg": {
      "breaks": [22.5, 67.5, 112.5, 157.5, 202.5, 247.5, 292.5, 337.5],
      "labels": ["N", "NE", "E", "SE", "S", "SW", "W", "NW"]
    }
  },
  "extent": {
    "spatial": { "bbox": [[-102.05, 36.99, -94.59, 40.00]] },
    "temporal": { "interval": [["2018-01-01T00:00:00Z", "2020-12-31T23:59:59Z"]] }
  },
  "keywords": ["Kansas", "aspect", "azimuth", "DEM", "terrain", "LiDAR", "3DEP", "microclimate"]
}
