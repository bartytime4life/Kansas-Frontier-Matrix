<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2"
     xmlns:gx="http://www.google.com/kml/ext/2.2"
     xmlns:atom="http://www.w3.org/2005/Atom">

  <Document>
    <name>Kansas 1 m Hillshade (2018–2020)</name>
    <open>1</open>

    <!-- Discoverability / provenance (optional) -->
    <atom:author><atom:name>Kansas Frontier Matrix</atom:name></atom:author>
    <!-- Replace with your GitHub Pages site if desired -->
    <atom:link rel="related" href="https://YOUR-PAGES-DOMAIN/"/>

    <NetworkLink id="ks_1m_hillshade_link">
      <name>Hillshade SuperOverlay</name>
      <open>1</open>
      <gx:flyToView>1</gx:flyToView>

      <!-- Kansas extent guard (prevents fetches when out-of-bounds) -->
      <Region>
        <LatLonAltBox>
          <north>40.003</north>
          <south>36.993</south>
          <east>-94.588</east>
          <west>-102.051</west>
          <minAltitude>0</minAltitude>
          <maxAltitude>0</maxAltitude>
        </LatLonAltBox>
        <Lod>
          <minLodPixels>64</minLodPixels>
          <maxLodPixels>-1</maxLodPixels>
        </Lod>
      </Region>

      <!-- Default view -->
      <LookAt>
        <longitude>-98.3</longitude>
        <latitude>38.5</latitude>
        <altitude>0</altitude>
        <heading>0</heading>
        <tilt>0</tilt>
        <range>900000</range>
        <altitudeMode>clampToGround</altitudeMode>
      </LookAt>

      <Link>
        <!-- Portable (inside Kansas_Terrain.kmz): doc.kml -> networklinks/*.kml -> overlays/*.kmz -->
        <href>overlays/ks_hillshade_2018_2020.kmz</href>

        <!-- If you’re serving the KMZ externally instead, uncomment and set your absolute URL:
        <href>https://YOUR-PAGES-DOMAIN/data/kml/ks_hillshade_2018_2020.kmz</href>
        -->

        <!-- Let SuperOverlay Regions control tile loading -->
        <viewRefreshMode>onRegion</viewRefreshMode>
        <!-- Small hysteresis to avoid thrashing -->
        <viewRefreshTime>1</viewRefreshTime>
        <!-- Prefetch a bit beyond bounds to reduce edge pop-in -->
        <viewBoundScale>1.2</viewBoundScale>
      </Link>
    </NetworkLink>
  </Document>
</kml>
