<?xml version="1.0" encoding="UTF-8"?>
<kml
  xmlns="http://www.opengis.net/kml/2.2"
  xmlns:gx="http://www.google.com/kml/ext/2.2"
  xmlns:atom="http://www.w3.org/2005/Atom">

  <Document>
    <name>USGS Topographic Map — Larned (1894)</name>
    <open>1</open>

    <!-- Provenance -->
    <atom:author>
      <atom:name>Kansas Frontier Matrix</atom:name>
    </atom:author>
    <!-- Replace with your public Pages URL (e.g., https://bartytime4life.github.io/Kansas-Frontier-Matrix/) -->
    <atom:link rel="related" href="https://YOUR-PAGES-DOMAIN/"/>

    <!-- Friendly blurb in Places panel -->
    <Snippet maxLines="2">Historic USGS topo (Larned, 1894). Progressive SuperOverlay tiles.</Snippet>

    <!-- Optional list style (purely cosmetic) -->
    <Style id="folder-style">
      <ListStyle>
        <listItemType>checkHideChildren</listItemType>
        <bgColor>00ffffff</bgColor>
        <ItemIcon>
          <state>open</state>
          <href>http://maps.google.com/mapfiles/kml/shapes/placemark_circle_highlight.png</href>
        </ItemIcon>
      </ListStyle>
    </Style>

    <NetworkLink id="usgs_topo_larned_1894_link">
      <name>Larned 1894 — SuperOverlay</name>
      <open>1</open>
      <gx:flyToView>1</gx:flyToView>
      <styleUrl>#folder-style</styleUrl>

      <!-- Quad vicinity guard (prevents out-of-bounds fetches) -->
      <Region>
        <LatLonAltBox>
          <!-- Keep this slightly generous around the map neatline -->
          <north>38.3000</north>
          <south>37.8000</south>
          <east>-98.8000</east>
          <west>-99.5000</west>
          <minAltitude>0</minAltitude>
          <maxAltitude>0</maxAltitude>
        </LatLonAltBox>
        <Lod>
          <minLodPixels>64</minLodPixels>
          <maxLodPixels>-1</maxLodPixels>
          <minFadeExtent>16</minFadeExtent>
          <maxFadeExtent>64</maxFadeExtent>
        </Lod>
      </Region>

      <!-- Default view (center near Larned, KS) -->
      <LookAt>
        <longitude>-99.1000</longitude>
        <latitude>38.1800</latitude>
        <altitude>0</altitude>
        <heading>0</heading>
        <tilt>0</tilt>
        <range>200000</range>
        <altitudeMode>clampToGround</altitudeMode>
      </LookAt>

      <Link>
        <!-- If this file resides in data/earth/networklinks/ and the KMZ is in data/earth/overlays/, go up one level -->
        <href>../overlays/usgs_topo_larned_1894.kmz</href>

        <!-- If hosting externally, comment the relative href above and use a single absolute URL below:
        <href>https://YOUR-PAGES-DOMAIN/data/kml/usgs_topo_larned_1894.kmz</href>
        -->

        <!-- Let SuperOverlay Regions control tile loading -->
        <viewRefreshMode>onRegion</viewRefreshMode>
        <!-- Small hysteresis to avoid thrashing -->
        <viewRefreshTime>1</viewRefreshTime>
        <!-- Prefetch a bit beyond bounds to reduce edge pop-in -->
        <viewBoundScale>1.2</viewBoundScale>
        <viewFormat/>
      </Link>
    </NetworkLink>

    <!-- Optional: human/debug provenance (ignored by renderer) -->
    <ExtendedData>
      <Data name="source">
        <value>USGS historic topo (1894), regionated as SuperOverlay</value>
      </Data>
      <Data name="stac_item">
        <value>stac/items/overlays/usgs_topo_larned_1894.json</value>
      </Data>
      <Data name="meta_json">
        <value>data/cogs/overlays/usgs_topo_larned_1894.meta.json</value>
      </Data>
    </ExtendedData>

  </Document>
</kml>