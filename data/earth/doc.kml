<?xml version="1.0" encoding="UTF-8"?>
<kml
  xmlns="http://www.opengis.net/kml/2.2"
  xmlns:gx="http://www.google.com/kml/ext/2.2"
  xmlns:atom="http://www.w3.org/2005/Atom">

  <Document>
    <name>Kansas-Frontier-Matrix — Earth Hub</name>
    <open>1</open>
    <Snippet maxLines="2">Top-level KML aggregating Kansas elevation overlays and historic maps via NetworkLinks.</Snippet>

    <!-- Optional provenance -->
    <atom:author><atom:name>Kansas Frontier Matrix</atom:name></atom:author>
    <!-- Replace with your public site if desired -->
    <atom:link rel="related" href="https://YOUR-PAGES-DOMAIN/"/>

    <!-- Subtle outline style for future vector overlays -->
    <Style id="outline-grey">
      <LineStyle>
        <!-- aabbggrr (little endian) — aa=alpha -->
        <color>aa808080</color>
        <width>2</width>
      </LineStyle>
      <PolyStyle>
        <color>33ffffff</color>
        <fill>1</fill>
        <outline>1</outline>
      </PolyStyle>
    </Style>

    <!-- List/balloon cosmetics (optional) -->
    <Style id="folder-style">
      <ListStyle>
        <listItemType>checkHideChildren</listItemType>
        <bgColor>00ffffff</bgColor>
      </ListStyle>
      <BalloonStyle>
        <text><![CDATA[
          <b>$[name]</b><br/>
          <i>Kansas Frontier Matrix</i>
        ]]></text>
      </BalloonStyle>
    </Style>

    <!-- Default view over Kansas -->
    <LookAt>
      <longitude>-98.3</longitude>
      <latitude>38.5</latitude>
      <altitude>0</altitude>
      <heading>0</heading>
      <tilt>0</tilt>
      <range>900000</range>
      <altitudeMode>clampToGround</altitudeMode>
    </LookAt>

    <!-- ─────────── Basemaps / Terrain ─────────── -->
    <Folder>
      <name>Basemaps &amp; Terrain</name>
      <open>1</open>
      <styleUrl>#folder-style</styleUrl>

      <!-- Kansas 1 m Hillshade (2018–2020) -->
      <!-- NOTE: doc.kml lives beside networklinks/, so link to networklinks/*.kml -->
      <NetworkLink id="nl_ks_hillshade_2018_2020">
        <name>Kansas 1 m Hillshade (2018–2020)</name>
        <visibility>1</visibility>
        <open>1</open>
        <gx:flyToView>1</gx:flyToView>
        <Link>
          <href>networklinks/ks_1m_hillshade.kml</href>
          <viewRefreshMode>onRegion</viewRefreshMode>
          <viewRefreshTime>1</viewRefreshTime>
          <viewBoundScale>1.2</viewBoundScale>
        </Link>
      </NetworkLink>
    </Folder>

    <!-- ─────────── Historic Maps ─────────── -->
    <Folder>
      <name>Historic Topographic Maps</name>
      <open>1</open>
      <styleUrl>#folder-style</styleUrl>

      <!-- USGS Larned (1894) quad -->
      <NetworkLink id="nl_usgs_larned_1894">
        <name>USGS Topographic Map — Larned (1894)</name>
        <visibility>1</visibility>
        <open>0</open>
        <gx:flyToView>1</gx:flyToView>
        <Link>
          <href>networklinks/usgs_topo_1894.kml</href>
          <viewRefreshMode>onRegion</viewRefreshMode>
          <viewRefreshTime>1</viewRefreshTime>
          <viewBoundScale>1.2</viewBoundScale>
        </Link>
      </NetworkLink>

      <!-- Template for adding more historic sheets -->
      <!--
      <NetworkLink id="nl_{sheet_slug}_{year}">
        <name>USGS Topographic Map — {SHEET_NAME} ({YEAR})</name>
        <visibility>0</visibility>
        <open>0</open>
        <gx:flyToView>1</gx:flyToView>
        <Link>
          <href>networklinks/usgs_topo_{sheet_slug}_{year}.kml</href>
          <viewRefreshMode>onRegion</viewRefreshMode>
          <viewRefreshTime>1</viewRefreshTime>
          <viewBoundScale>1.2</viewBoundScale>
        </Link>
      </NetworkLink>
      -->
    </Folder>

    <!-- ─────────── Vectors / Thematic Layers (optional) ─────────── -->
    <!--
    <Folder>
      <name>Vectors (Treaties, Railroads, Trails)</name>
      <open>0</open>
      <styleUrl>#folder-style</styleUrl>

      <NetworkLink id="nl_railroads_1900">
        <name>Railroads (c. 1900)</name>
        <visibility>0</visibility>
        <Link>
          <href>networklinks/railroads_1900.kml</href>
          <viewRefreshMode>onRegion</viewRefreshMode>
          <viewRefreshTime>1</viewRefreshTime>
          <viewBoundScale>1.2</viewBoundScale>
        </Link>
      </NetworkLink>

      <NetworkLink id="nl_treaties">
        <name>Treaties &amp; Reservations</name>
        <visibility>0</visibility>
        <Link>
          <href>networklinks/treaties.kml</href>
          <viewRefreshMode>onRegion</viewRefreshMode>
          <viewRefreshTime>1</viewRefreshTime>
          <viewBoundScale>1.2</viewBoundScale>
        </Link>
      </NetworkLink>
    </Folder>
    -->

    <!-- Optional: human/debug provenance (ignored by renderer) -->
    <ExtendedData>
      <Data name="repo">
        <value>https://github.com/bartytime4life/Kansas-Frontier-Matrix</value>
      </Data>
      <Data name="stac_root">
        <value>stac/</value>
      </Data>
    </ExtendedData>

  </Document>
</kml>