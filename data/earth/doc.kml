<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2"
     xmlns:gx="http://www.google.com/kml/ext/2.2"
     xmlns:atom="http://www.w3.org/2005/Atom">

  <Document>
    <name>Kansas-Frontier-Matrix — Earth Hub</name>
    <open>1</open>
    <Snippet maxLines="2">Top-level KML aggregating Kansas elevation overlays and historic maps via NetworkLinks.</Snippet>

    <!-- Optional provenance -->
    <atom:author><atom:name>Kansas Frontier Matrix</atom:name></atom:author>

    <!-- Shared, subtle outline style for (future) vector overlays -->
    <Style id="outline-grey">
      <LineStyle>
        <color>aa808080</color>
        <width>2</width>
      </LineStyle>
      <PolyStyle>
        <color>33ffffff</color>
        <fill>1</fill>
        <outline>1</outline>
      </PolyStyle>
    </Style>

    <!-- Default view over Kansas -->
    <LookAt>
      <longitude>-98.3</longitude>
      <latitude>38.5</latitude>
      <altitude>0</altitude>
      <heading>0</heading>
      <tilt>0</tilt>
      <range>900000</range>
      <altitudeMode>clampToGround</altitudeMode>
    </LookAt>

    <!-- ─────────── Basemaps / Terrain ─────────── -->
    <Folder>
      <name>Basemaps &amp; Terrain</name>
      <open>1</open>

      <!-- Kansas 1 m Hillshade (regionated KMZ via NetworkLink -> networklinks/ks_1m_hillshade.kml) -->
      <NetworkLink id="nl_ks_hillshade">
        <name>Kansas 1 m Hillshade (2018–2020)</name>
        <visibility>1</visibility>
        <open>1</open>
        <gx:flyToView>0</gx:flyToView>
        <!-- Keep region guard at the top level to avoid remote fetches when outside Kansas -->
        <Region>
          <LatLonAltBox>
            <north>40.003</north>
            <south>36.993</south>
            <east>-94.588</east>
            <west>-102.051</west>
            <minAltitude>0</minAltitude>
            <maxAltitude>0</maxAltitude>
          </LatLonAltBox>
          <Lod>
            <minLodPixels>64</minLodPixels>
            <maxLodPixels>-1</maxLodPixels>
          </Lod>
        </Region>
        <Link>
          <!-- relative to this doc.kml -->
          <href>./networklinks/ks_1m_hillshade.kml</href>
          <!-- Let the downstream SuperOverlay control loading via its internal Regions -->
          <viewRefreshMode>onRegion</viewRefreshMode>
          <viewRefreshTime>1</viewRefreshTime>
          <!-- Prefetch a bit beyond bounds to reduce edge pop-in -->
          <viewBoundScale>1.2</viewBoundScale>
        </Link>
      </NetworkLink>
    </Folder>

    <!-- ─────────── Historic Maps ─────────── -->
    <Folder>
      <name>Historic Topographic Maps</name>
      <open>1</open>

      <!-- USGS Larned (1894) quad -->
      <NetworkLink id="nl_usgs_larned_1894">
        <name>USGS Topographic Map — Larned (1894)</name>
        <visibility>1</visibility>
        <open>0</open>
        <gx:flyToView>0</gx:flyToView>
        <Region>
          <LatLonAltBox>
            <north>38.3000</north>
            <south>37.8000</south>
            <east>-98.8000</east>
            <west>-99.5000</west>
            <minAltitude>0</minAltitude>
            <maxAltitude>0</maxAltitude>
          </LatLonAltBox>
          <Lod>
            <minLodPixels>64</minLodPixels>
            <maxLodPixels>-1</maxLodPixels>
          </Lod>
        </Region>
        <Link>
          <href>./networklinks/usgs_topo_1894.kml</href>
          <viewRefreshMode>onRegion</viewRefreshMode>
          <viewRefreshTime>1</viewRefreshTime>
          <viewBoundScale>1.2</viewBoundScale>
        </Link>
      </NetworkLink>

      <!-- Template for adding more historic sheets -->
      <!--
      <NetworkLink id="nl_{sheet_id}">
        <name>USGS Topographic Map — {SHEET_NAME} ({YEAR})</name>
        <visibility>0</visibility>
