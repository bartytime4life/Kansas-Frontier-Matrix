<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2"
     xmlns:gx="http://www.google.com/kml/ext/2.2"
     xmlns:atom="http://www.w3.org/2005/Atom">

  <Document>
    <name>Kansas-Frontier-Matrix — Earth Hub</name>
    <open>1</open>
    <Snippet maxLines="2">Top-level KML aggregating Kansas elevation overlays and historic maps via NetworkLinks.</Snippet>

    <!-- Optional provenance -->
    <atom:author><atom:name>Kansas Frontier Matrix</atom:name></atom:author>

    <!-- Subtle outline style for future vector overlays -->
    <Style id="outline-grey">
      <LineStyle>
        <!-- aabbggrr (little endian) — aa=alpha -->
        <color>aa808080</color>
        <width>2</width>
      </LineStyle>
      <PolyStyle>
        <color>33ffffff</color>
        <fill>1</fill>
        <outline>1</outline>
      </PolyStyle>
    </Style>

    <!-- Default view over Kansas -->
    <LookAt>
      <longitude>-98.3</longitude>
      <latitude>38.5</latitude>
      <altitude>0</altitude>
      <heading>0</heading>
      <tilt>0</tilt>
      <range>900000</range>
      <altitudeMode>clampToGround</altitudeMode>
    </LookAt>

    <!-- ─────────── Basemaps / Terrain ─────────── -->
    <Folder>
      <name>Basemaps &amp; Terrain</name>
      <open>1</open>

      <!-- Kansas 1 m Hillshade (2018–2020) -->
      <!-- NOTE: doc.kml lives in data/earth/, KMZ in data/kml/ → use ../kml/... -->
      <NetworkLink id="nl_ks_hillshade_2018_2020">
        <name>Kansas 1 m Hillshade (2018–2020)</name>
        <visibility>1</visibility>
        <open>1</open>
        <Region>
          <LatLonAltBox>
            <north>40.003</north>
            <south>36.993</south>
            <east>-94.588</east>
            <west>-102.051</west>
            <minAltitude>0</minAltitude>
            <maxAltitude>0</maxAltitude>
          </LatLonAltBox>
          <Lod>
            <minLodPixels>64</minLodPixels>
            <maxLodPixels>-1</maxLodPixels>
          </Lod>
        </Region>
        <Link>
          <href>../kml/ks_hillshade_2018_2020.kmz</href>
          <viewRefreshMode>onRegion</viewRefreshMode>
          <viewBoundScale>1.2</viewBoundScale>
        </Link>
      </NetworkLink>
    </Folder>

    <!-- ─────────── Historic Maps ─────────── -->
    <Folder>
      <name>Historic Topographic Maps</name>
      <open>1</open>

      <!-- USGS Larned (1894) quad -->
      <NetworkLink id="nl_usgs_larned_1894">
        <name>USGS Topographic Map — Larned (1894)</name>
        <visibility>1</visibility>
        <open>0</open>
        <Region>
          <LatLonAltBox>
            <!-- Keep a conservative bounding box; SuperOverlay handles fine tiling -->
            <north>38.3000</north>
            <south>37.8000</south>
            <east>-98.8000</east>
            <west>-99.5000</west>
            <minAltitude>0</minAltitude>
            <maxAltitude>0</maxAltitude>
          </LatLonAltBox>
          <Lod>
            <minLodPixels>64</minLodPixels>
            <maxLodPixels>-1</maxLodPixels>
          </Lod>
        </Region>
        <Link>
          <href>../kml/usgs_topo_larned_1894.kmz</href>
          <viewRefreshMode>onRegion</viewRefreshMode>
          <viewBoundScale>1.2</viewBoundScale>
        </Link>
      </NetworkLink>

      <!-- Template for adding more historic sheets -->
