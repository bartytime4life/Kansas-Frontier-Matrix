{
  "stac_version": "1.0.0",
  "stac_extensions": [
    "https://stac-extensions.github.io/item-assets/v1.0.0/schema.json",
    "https://stac-extensions.github.io/projection/v1.0.0/schema.json"
  ],
  "type": "Collection",
  "id": "vectors",
  "title": "Kansas Historical & Infrastructure Vectors",
  "description": "Vector layers for the Kansas-Frontier-Matrix, including railroads (circa 1900), treaty boundaries (1854), trails, settlements, cadastral/PLSS lines, hydrology, and other time-aware features for analysis and visualization.",
  "license": "public-domain",
  "keywords": [
    "vectors",
    "railroads",
    "treaties",
    "boundaries",
    "PLSS",
    "hydrology",
    "Kansas",
    "historical-GIS"
  ],
  "providers": [
    {
      "name": "Kansas Frontier Matrix Project",
      "roles": ["processor", "host"],
      "url": "https://github.com/bartytime4life/Kansas-Frontier-Matrix"
    }
  ],
  "extent": {
    "spatial": { "bbox": [[-102.051, 36.993, -94.588, 40.003]] },
    "temporal": { "interval": [["1800-01-01T00:00:00Z", null]] }
  },
  "summaries": {
    "proj:epsg": [4326],
    "geometry": ["Point", "MultiPoint", "LineString", "MultiLineString", "Polygon", "MultiPolygon"]
  },
  "item_assets": {
    "data": {
      "type": "application/geo+json",
      "roles": ["data"],
      "title": "Primary vector data (GeoJSON)",
      "description": "Canonical vector layer, EPSG:4326 GeoJSON."
    },
    "tiles_pmtiles": {
      "type": "application/vnd.pmtiles",
      "roles": ["tiles"],
      "title": "Vector tiles (PMTiles)",
      "description": "Single-file PMTiles for fast web rendering."
    },
    "tiles_mbtiles": {
      "type": "application/octet-stream",
      "roles": ["tiles", "alternate"],
      "title": "Vector tiles (MBTiles)",
      "description": "SQLite MBTiles (alternate tiles format)."
    },
    "metadata": {
      "type": "application/json",
      "roles": ["metadata"],
      "title": "Item metadata / lineage",
      "description": "Provenance, schema, and lineage for the vector layer."
    },
    "thumbnail": {
      "type": "image/png",
      "roles": ["thumbnail"],
      "title": "Thumbnail preview"
    }
  },
  "links": [
    { "rel": "self",   "href": "./vectors.json",     "type": "application/json" },
    { "rel": "root",   "href": "../catalog.json",    "type": "application/json" },
    { "rel": "parent", "href": "../catalog.json",    "type": "application/json" },

    { "rel": "child",  "href": "../collections/ks_railroads.json",        "type": "application/json", "title": "Kansas Railroads (collection)" },
    { "rel": "child",  "href": "../collections/kansas_treaties_19c.json", "type": "application/json", "title": "Treaties (19th c.) (collection)" },
    { "rel": "child",  "href": "../collections/ks_hydrography.json",      "type": "application/json", "title": "Hydrography (collection)" },
    { "rel": "child",  "href": "../collections/ks_roads.json",            "type": "application/json", "title": "Roads & Trails (collection)" },

    { "rel": "child",  "href": "../collections/ks_kansas_river.json",     "type": "application/json", "title": "Kansas River Hydrology (KGS)" }
  ]
}
