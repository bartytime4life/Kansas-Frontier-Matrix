  "title": "Kansas DEM Overlays Collection",
  "description": "Catalog of processed overlays derived from Kansas 1 m DEMs and georeferenced historical base layers. Includes hillshade, slope/aspect derivatives, and historical USGS topographic map overlays. All overlays are documented with provenance and aligned to a web-delivery CRS (EPSG:4326) unless otherwise noted in each item.",

  "spatial": {
    "bbox": [-102.05, 36.99, -94.59, 40.00],
    "crs": "EPSG:4326"
  },
  "temporal": {
    "start": "1894-01-01T00:00:00Z",
    "end": "2020-12-31T23:59:59Z"
  },

  "overlays": [
    {
      "id": "ks_hillshade_2018_2020",
      "type": "raster",
      "time": { "start": 2018, "end": 2020 },
      "paths": {
        "primary": "data/cogs/hillshade/ks_hillshade_2018_2020.tif",
        "meta": "data/cogs/hillshade/ks_hillshade_2018_2020.meta.json",
        "sha256": "data/cogs/hillshade/ks_hillshade_2018_2020.sha256",
        "preview": "data/cogs/hillshade/ks_hillshade_2018_2020_preview.png",
        "stac_item": "data/stac/items/ks_hillshade_2018_2020.json"
      },
      "description": "Hillshade overlay generated from the 2018–2020 Kansas 1 m DEM.",
      "providers": [
        { "name": "USGS 3D Elevation Program (3DEP)", "roles": ["producer", "licensor"], "url": "https://www.usgs.gov/3d-elevation-program" },
        { "name": "Kansas DASC", "roles": ["host", "distributor"], "url": "https://kansasgis.org" }
      ],
      "license": "Public Domain (USGS)",
      "provenance": "USGS 3DEP LiDAR-derived DEM, processed via GDAL hillshade and converted to COG",
      "web": {
        "layer_hint": {
          "id": "ks_1m_hillshade",
          "title": "Hillshade (2018–2020)",
          "group": "Basemaps & Terrain",
          "type": "raster",
          "url": "./tiles/ks_hillshade/{z}/{x}/{y}.png",
