          "minzoom": 0,
          "maxzoom": 14,
          "start": 2018,
          "end": 2020,
          "attribution": "DEM/Hillshade © KARS / State of Kansas"
        }
      }
    },
    {
      "id": "usgs_topo_larned_1894",
      "type": "raster",
      "time": { "start": 1894, "end": 1894 },
      "paths": {
        "primary": "data/cogs/overlays/usgs_topo_larned_1894.tif",
        "meta": "data/cogs/overlays/usgs_topo_larned_1894.meta.json",
        "sha256": "data/cogs/overlays/usgs_topo_larned_1894.sha256",
        "preview": "data/cogs/overlays/usgs_topo_larned_1894_preview.png",
        "stac_item": "data/stac/items/usgs_topo_larned_1894.json"
      },
      "description": "Georeferenced 1894 USGS topographic map of Larned, Kansas, for historical context.",
      "providers": [
        { "name": "United States Geological Survey (USGS)", "roles": ["producer", "licensor"], "url": "https://www.usgs.gov" },
