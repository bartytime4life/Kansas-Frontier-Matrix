      ],
      "license": "Public Domain (USGS)",
      "provenance": "USGS Historical Topographic Map Collection scan georeferenced to EPSG:4326 and converted to COG (JPEG-in-COG)",
      "web": {
        "layer_hint": {
          "id": "usgs_1894_larned",
