  "data_quality": {
    "processing": "All overlays are Cloud Optimized GeoTIFF (COG) with internal tiling and overviews.",
    "uncertainty": "Historical scans may include cartographic distortions; DEM-derived products adhere to source LiDAR specifications.",
    "historical_map_rmse_pixels": null,
    "notes": "Per-item CRS, resampling, and parameters are recorded in each overlay's .meta.json."
  },

  "validation": {
    "checks": [
      "jq -e 'type==\"object\"' data/processed/dem/overlays/_meta.json",
      "test -f data/cogs/hillshade/ks_hillshade_2018_2020.sha256 && sha256sum -c data/cogs/hillshade/ks_hillshade_2018_2020.sha256",
      "test -f data/cogs/overlays/usgs_topo_larned_1894.sha256 && sha256sum -c data/cogs/overlays/usgs_topo_larned_1894.sha256"
    ]
  },

