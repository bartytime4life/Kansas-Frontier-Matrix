{
  "type": "FeatureCollection",
  "name": "roads_<period>",
  "crs": {
    "type": "name",
    "properties": { "name": "urn:ogc:def:crs:OGC:1.3:CRS84" }
  },
  "features": [],
  "properties": {
    "schema": {
      "id": "string",
      "name": "string",
      "road_type": "string",           // highway | primary | secondary | local | trail | wagon_road | railroad_grade | other
      "surface": "string|null",        // paved | gravel | dirt | unknown
      "functional_class": "string|null", // per KDOT/TIGER (e.g., 'Principal Arterial', 'Collector', 'Local')
      "period_start": "integer|null",  // first year included in <period> for this segment
      "period_end": "integer|null",    // last year included in <period>; null if same as start or not bounded
      "source": "string",              // e.g., 'KDOT Centerlines', 'TIGER/Line 2015', 'USGS Historic Topo'
      "source_layer": "string|null",   // service/layer or map sheet id
      "accuracy_m": "number|null",     // estimated horizontal positional accuracy
      "notes": "string|null"           // free-form notes; symbology, OCR refs, map plate, digitizing caveats
    }
  }
}
