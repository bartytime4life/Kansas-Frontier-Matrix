{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PolicyDecision",
  "type": "object",
  "required": [
    "effect",
    "obligations"
  ],
  "properties": {
    "effect": {
      "type": "string",
      "enum": [
        "allow",
        "deny"
      ]
    },
    "obligations": {
      "type": "array",
      "items": {
        "$ref": "obligation.schema.json"
      }
    }
  },
  "additionalProperties": true
}
