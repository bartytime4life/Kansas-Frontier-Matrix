root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[makefile]
indent_style = tab

[GNUmakefile]
indent_style = tab

[*.bat]
end_of_line = crlf

[*.cmd]
end_of_line = crlf

[*.csv]
trim_trailing_whitespace = false

[*.tsv]
trim_trailing_whitespace = false

