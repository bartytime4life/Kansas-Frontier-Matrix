# ================================
# Kansas-Frontier-Matrix / MCP Repo
# .editorconfig â€” enforce consistency (upgraded)
# ================================

root = true

# --- Global defaults ---
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# --- Python ---
[*.py]
indent_size = 4
# Note: max_line_length is not a core EditorConfig key; some tools may ignore it.
max_line_length = 100
trim_trailing_whitespace = true

# --- Shell / Make / YAML ---
[*.sh]
indent_size = 2

# Any file literally named Makefile (any path)
[Makefile]
indent_style = tab
tab_width = 4  # display width only; real tabs required by make

# Makefile fragments
[*.mk]
indent_style = tab
tab_width = 4

[*.yml]
indent_size = 2
max_line_length = off

[*.yaml]
indent_size = 2
max_line_length = off

# --- JavaScript / TypeScript / Web ---
[*.js]
indent_size = 2

[*.mjs]
indent_size = 2

[*.cjs]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.jsx]
indent_size = 2

[*.css]
indent_size = 2

[*.html]
indent_size = 2

# JSON family
[*.json]
indent_size = 2
max_line_length = off

[*.jsonc]
indent_size = 2
max_line_length = off

[*.jsonl]
indent_size = 2
max_line_length = off

[*.ndjson]
indent_size = 2
max_line_length = off

[*.geojson]
indent_size = 2
max_line_length = off

# Templates
[*.j2]
indent_size = 2
[*.jinja2]
indent_size = 2

# --- Markdown / Docs / Diagrams ---
[*.md]
trim_trailing_whitespace = false  # allow two-space line breaks
max_line_length = off

[*.mdx]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

[*.rst]
trim_trailing_whitespace = false
max_line_length = off

# Mermaid diagrams
[*.mmd]
indent_size = 2
max_line_length = off
[*.mermaid]
indent_size = 2
max_line_length = off

# SVGs often contain long single lines
[*.svg]
max_line_length = off
trim_trailing_whitespace = false

# --- Data files (preserve whitespace/width) ---
[*.csv]
trim_trailing_whitespace = false
max_line_length = off

[*.tsv]
trim_trailing_whitespace = false
max_line_length = off

[*.sql]
trim_trailing_whitespace = false
max_line_length = off

[*.lock]
trim_trailing_whitespace = false
max_line_length = off

# --- Notebooks (JSON; avoid aggressive whitespace munging) ---
[*.ipynb]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# --- Configs / misc ---
[*.toml]
indent_size = 2

[*.ini]
indent_size = 2

[Dockerfile]
indent_size = 2

[Dockerfile.*]
indent_size = 2

[.env]
indent_size = 2

[.gitattributes]
indent_size = 2

[.gitignore]
indent_size = 2

[LICENSE]
trim_trailing_whitespace = false

# --- Directory-scoped overrides for generated artifacts ---
# Built static site outputs (may have minified lines)
[site/**]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = false

[_site/**]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = false

[_site_docs/**]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = false

# Alternative build folders
[web/dist/**]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = false

[web/build/**]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = false

# Tile pyramids / heavy generated assets
[web/tiles/**]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = false

# Allow long lines in STAC Items & Collections JSON
[stac/**]
max_line_length = off
trim_trailing_whitespace = false

# JSON Schemas / configs may be long (use **/*.json rather than **.json)
[web/config/**/*.json]
max_line_length = off
trim_trailing_whitespace = false

# Node / package manager caches & outputs
[node_modules/**]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = false

# GitHub workflow snippets can be long
[.github/workflows/**/*.yml]
max_line_length = off
