# Kansas Frontier Matrix (KFM) — .editorconfig
# Keep whitespace + line endings consistent across docs, schemas, pipelines, API, and UI.
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ---------- Code ----------
[*.{py,pyi}]
indent_size = 4

[*.{js,jsx,ts,tsx,cjs,mjs}]
indent_size = 2

[*.{sh,bash,zsh}]
indent_size = 2

# ---------- Data / metadata ----------
[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc,jsonld,jsonl,ndjson,geojson,topojson,ipynb,avsc}]
indent_size = 2

[*.{ttl,nt,nq,rdf,owl,sparql}]
indent_size = 2

[*.{toml,ini,cfg,conf,properties}]
indent_size = 2

# ---------- Docs ----------
[*.{md,mdx,rst}]
indent_size = 2

# ---------- Query / graph ----------
[*.{sql,cypher,cql,graphql,gql}]
indent_size = 2

# ---------- Web assets ----------
[*.{css,scss,less,html,htm,xml,svg}]
indent_size = 2

# Makefiles require tabs
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = tab
tab_width = 4

# Don’t auto-strip whitespace in delimiter-based data files
[*.{csv,tsv,psv}]
trim_trailing_whitespace = false

# Logs often shouldn’t be auto-mutated by editor save hooks
[*.log]
trim_trailing_whitespace = false

# Windows scripts: keep CRLF for compatibility with cmd.exe / some PowerShell setups
[*.{bat,cmd,ps1}]
end_of_line = crlf
