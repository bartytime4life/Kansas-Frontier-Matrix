# ğŸ§­ .editorconfig
# Consistent formatting across editors/IDEs âœ…

root = true

# ğŸŒ Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 2

# ğŸ Python
[*.py]
indent_size = 4

[*.pyi]
indent_size = 4

# ğŸ§ª PowerShell
[*.ps1]
indent_size = 4

[*.psm1]
indent_size = 4

# ğŸ§® MATLAB / Octave
[*.m]
indent_size = 4

# ğŸ“ Markdown / docs (keep intentional hard breaks)
[*.md]
trim_trailing_whitespace = false

[*.mdx]
trim_trailing_whitespace = false

[*.rst]
trim_trailing_whitespace = false

# ğŸ“Š Data files (avoid accidental whitespace trimming)
[*.csv]
trim_trailing_whitespace = false

[*.tsv]
trim_trailing_whitespace = false

[data/**]
trim_trailing_whitespace = false

# ğŸ§° Makefiles require tabs
[Makefile]
indent_style = tab

# ğŸªŸ Windows scripts
[*.bat]
end_of_line = crlf

[*.cmd]
end_of_line = crlf