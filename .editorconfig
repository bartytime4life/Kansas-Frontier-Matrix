# Kansas-Frontier-Matrix / MCP Repo
# .editorconfig â€” enforce consistency
# ================================

root = true

# --- Global defaults ---
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# --- Python ---
[*.py]
indent_size = 4
max_line_length = 88
# (aligns with Black/PEP8)
trim_trailing_whitespace = true

# --- Shell / Make / YAML ---
[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
[*.yaml]
indent_size = 2

# --- JavaScript / TypeScript / Web ---
[*.js]
indent_size = 2
[*.ts]
indent_size = 2
[*.json]
indent_size = 2
[*.css]
indent_size = 2
[*.html]
indent_size = 2

# --- Markdown / Docs ---
[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.rst]
trim_trailing_whitespace = false
max_line_length = off

# --- Notebooks ---
[*.ipynb]
indent_size = 2
trim_trailing_whitespace = false

# --- Configs ---
[*.toml]
indent_size = 2

[*.ini]
indent_size = 2
