# ================================
# Kansas-Frontier-Matrix / MCP Repo
# .editorconfig â€” enforce consistency
# ================================

root = true

# --- Global defaults ---
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# --- Python ---
[*.py]
indent_size = 4
# Keep in sync with pyproject.toml (Black/Ruff line-length)
max_line_length = 100
trim_trailing_whitespace = true

# --- Shell / Make / YAML ---
[*.sh]
indent_size = 2

[Makefile]
indent_style = tab
# keep other defaults (LF, final newline, trim)

[*.mk]
indent_style = tab

[*.yml]
indent_size = 2
max_line_length = off
[*.yaml]
indent_size = 2
max_line_length = off

# --- JavaScript / TypeScript / Web ---
[*.js]
indent_size = 2
[*.mjs]
indent_size = 2
[*.cjs]
indent_size = 2
[*.ts]
indent_size = 2
[*.tsx]
indent_size = 2
[*.jsx]
indent_size = 2
[*.json]
indent_size = 2
max_line_length = off
[*.jsonc]
indent_size = 2
max_line_length = off
[*.geojson]
indent_size = 2
max_line_length = off
[*.css]
indent_size = 2
[*.html]
indent_size = 2
[*.mdx]
indent_size = 2
[*.j2]    # Jinja templates
indent_size = 2

# --- Markdown / Docs / Diagrams ---
[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.rst]
trim_trailing_whitespace = false
max_line_length = off

[*.mmd]   # Mermaid diagrams
indent_size = 2

# --- Data files (preserve whitespace/width) ---
[*.csv]
trim_trailing_whitespace = false
max_line_length = off
[*.tsv]
trim_trailing_whitespace = false
max_line_length = off
[*.sql]
trim_trailing_whitespace = false
max_line_length = off
[*.lock]
trim_trailing_whitespace = false
max_line_length = off

# --- Notebooks (JSON; avoid aggressive whitespace munging) ---
[*.ipynb]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# --- Configs / misc ---
[*.toml]
indent_size = 2
[*.ini]
indent_size = 2
[Dockerfile]
indent_size = 2
[Dockerfile.*]
indent_size = 2
[.env]
indent_size = 2
[LICENSE]
trim_trailing_whitespace = false

# --- Directory-scoped overrides for generated artifacts ---
# Built static site output (may have minified lines)
[web/dist/**]
max_line_length = off
trim_trailing_whitespace = false

# Allow long lines in STAC Items & Collections JSON
[stac/**]
max_line_length = off
trim_trailing_whitespace = false
