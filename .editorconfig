# ================================
# Kansas-Frontier-Matrix / MCP Repo
# .editorconfig â€” enforce consistency
# ================================

root = true

# --- Global defaults ---
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# --- Python ---
[*.py]
indent_size = 4
# Keep this in sync with pyproject.toml (Black/Ruff line-length)
max_line_length = 100
trim_trailing_whitespace = true

# --- Shell / Make / YAML ---
[*.sh]
indent_size = 2

[Makefile]
indent_style = tab
# keep other defaults (LF, final newline, trim)

[*.mk]
indent_style = tab

[*.yml]
indent_size = 2
max_line_length = off
[*.yaml]
indent_size = 2
max_line_length = off

# --- JavaScript / TypeScript / Web ---
[*.js]
indent_size = 2
[*.ts]
indent_size = 2
[*.json]
indent_size = 2
[*.jsonc]
indent_size = 2
[*.geojson]
indent_size = 2
[*.css]
indent_size = 2
[*.html]
indent_size = 2
[*.mdx]
indent_size = 2

# --- Markdown / Docs ---
[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.rst]
trim_trailing_whitespace = false
max_line_length = off

# --- Data files (preserve whitespace) ---
[*.csv]
trim_trailing_whitespace = false
[*.tsv]
trim_trailing_whitespace = false
[*.sql]
trim_trailing_whitespace = false
[*.lock]
trim_trailing_whitespace = false

# --- Notebooks (JSON; avoid aggressive whitespace munging) ---
[*.ipynb]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# --- Configs / misc ---
[*.toml]
indent_size = 2
[*.ini]
indent_size = 2
[Dockerfile]
indent_size = 2
[Dockerfile.*]
indent_size = 2
[.env]
indent_size = 2
