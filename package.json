{
  "name": "kfm-roadmap-sync",
  "version": "0.1.2",
  "private": true,
  "license": "MIT",
  "description": "Sync .github/roadmap/roadmap.yaml to GitHub labels, milestones, and issues",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10",
  "repository": {
    "type": "git",
    "url": "https://github.com/bartytime4life/Kansas-Frontier-Matrix.git"
  },
  "bugs": {
    "url": "https://github.com/bartytime4life/Kansas-Frontier-Matrix/issues"
  },
  "homepage": "https://github.com/bartytime4life/Kansas-Frontier-Matrix#readme",
  "keywords": [
    "github-actions",
    "roadmap",
    "issues",
    "milestones",
    "labels",
    "kansas-frontier-matrix"
  ],
  "bin": {
    "kfm-roadmap-sync": "scripts/sync-roadmap.js"
  },
  "scripts": {
    "sync": "node scripts/sync-roadmap.js",
    "sync:dry": "cross-env DRY_RUN=1 node scripts/sync-roadmap.js",
    "check": "node --input-type=module -e \"import fs from 'fs'; fs.accessSync('.github/roadmap/roadmap.yaml'); console.log(process.version)\"",
    "validate": "node --input-type=module -e \"import fs from 'fs'; import yaml from 'js-yaml'; yaml.load(fs.readFileSync('.github/roadmap/roadmap.yaml','utf8')); console.log('roadmap.yaml: OK')\"",
    "fmt": "prettier --log-level warn -w .github/roadmap/roadmap.yaml scripts/sync-roadmap.js",
    "fmt:check": "prettier --log-level warn -c .github/roadmap/roadmap.yaml scripts/sync-roadmap.js"
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "6.0.0",
    "js-yaml": "4.1.0"
  },
  "devDependencies": {
    "prettier": "3.3.3",
    "cross-env": "7.0.3"
  },
  "files": [
    "scripts/sync-roadmap.js",
    ".github/roadmap/roadmap.yaml"
  ]
}
