{
  "name": "kfm-roadmap-sync",
  "version": "0.1.7",
  "private": true,
  "license": "MIT",
  "description": "Sync .github/roadmap/roadmap.yaml to GitHub labels, milestones, and issues",
  "type": "module",
  "author": "Andy Barta",
  "repository": {
    "type": "git",
    "url": "https://github.com/bartytime4life/Kansas-Frontier-Matrix.git"
  },
  "bugs": {
    "url": "https://github.com/bartytime4life/Kansas-Frontier-Matrix/issues"
  },
  "homepage": "https://github.com/bartytime4life/Kansas-Frontier-Matrix#readme",
  "keywords": [
    "github-actions",
    "roadmap",
    "issues",
    "milestones",
    "labels",
    "kansas-frontier-matrix"
  ],

  /* —— Runtime entry points & CLI —— */
  "main": "scripts/sync-roadmap.js",
  "exports": {
    ".": "./scripts/sync-roadmap.js"
  },
  "bin": {
    "kfm-roadmap-sync": "scripts/sync-roadmap.js"
  },

  /* —— Packaging —— */
  "sideEffects": false,
  "files": [
    "scripts/sync-roadmap.js",
    ".github/roadmap/roadmap.yaml",
    "README.md",
    "LICENSE"
  ],

  /* —— Tooling & engines —— */
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10",

  /* —— Scripts —— */
  "scripts": {
    "help": "node --enable-source-maps --unhandled-rejections=strict scripts/sync-roadmap.js --help || true",
    "sync": "node --enable-source-maps --unhandled-rejections=strict scripts/sync-roadmap.js",
    "sync:dry": "cross-env DRY_RUN=1 node --enable-source-maps --unhandled-rejections=strict scripts/sync-roadmap.js",
    "dry-run": "npm run sync:dry",
    "check": "node --input-type=module -e \"import fs from 'node:fs'; const p=process.env.ROADMAP_FILE||'.github/roadmap/roadmap.yaml'; fs.accessSync(p); console.log('roadmap file OK:', p); console.log('node', process.version);\"",
    "validate": "node --input-type=module -e \"import fs from 'node:fs'; import yaml from 'js-yaml'; const p=process.env.ROADMAP_FILE||'.github/roadmap/roadmap.yaml'; yaml.load(fs.readFileSync(p,'utf8')); console.log('roadmap.yaml: OK →', p);\"",
    "fmt": "prettier --log-level warn -w .github/roadmap/roadmap.yaml scripts/sync-roadmap.js package.json README.md",
    "fmt:check": "prettier --log-level warn -c .github/roadmap/roadmap.yaml scripts/sync-roadmap.js package.json README.md",
    "version:check": "node -e \"console.log(process.version)\" && npm -v",
    "audit": "npm audit --omit=dev --production --audit-level=high || true",
    "ci": "npm run version:check && npm run check && npm run validate && npm run fmt:check && npm run audit",
    "test": "node -e \"console.log('kfm-roadmap-sync OK')\""
  },

  /* —— Deps —— */
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "js-yaml": "^4.1.0",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "prettier": "^3.3.3"
  },

  /* —— Prettier inline config (keep it minimal & modern) —— */
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5"
  }
}
