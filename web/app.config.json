{
  "title": "Kansas-Frontier-Matrix",
  "subtitle": "Time-aware historical GIS for Kansas",
  "style": "https://demotiles.maplibre.org/style.json",
  "center": [-98.3, 38.5],
  "zoom": 6,

  "time": { "min": 1850, "max": 2025 },
  "defaultYear": 1930,

  "defaults": {
    "minzoom": 0,
    "maxzoom": 15,
    "tileSize": 256,
    "visible": true,
    "opacity": 1.0,
    "bounds": [-102.05, 36.99, -94.59, 40.00]
  },

  "layers": [
    {
      "id": "basemap_osm",
      "title": "Basemap — OpenStreetMap",
      "group": "Basemaps & Terrain",
      "type": "raster",
      "url": "https://tile.openstreetmap.org/{z}/{x}/{y}.png",
      "opacity": 1.0,
      "minzoom": 0,
      "maxzoom": 19,
      "visible": true,
      "attribution": "© OpenStreetMap contributors"
    },

    {
      "id": "hillshade",
      "title": "Hillshade (2018–2020)",
      "group": "Basemaps & Terrain",
      "type": "raster",
      "path": "../data/derivatives/hillshade.tif",
      "opacity": 0.9,
      "minzoom": 0,
      "maxzoom": 14,
      "visible": true,
      "start": 2018,
      "end": 2020,
      "attribution": "DEM/Hillshade © KARS / State of Kansas"
    },
    {
      "id": "slope",
      "title": "Slope (degrees)",
      "group": "Basemaps & Terrain",
      "type": "raster",
      "path": "../data/derivatives/slope.tif",
      "opacity": 0.85,
      "minzoom": 0,
      "maxzoom": 14,
      "visible": false,
      "start": 2018,
      "end": 2020,
      "attribution": "Derived from DEM © KARS / State of Kansas"
    },
    {
      "id": "aspect",
      "title": "Aspect (degrees)",
      "group": "Basemaps & Terrain",
      "type": "raster",
      "path": "../data/derivatives/aspect.tif",
      "opacity": 0.85,
      "minzoom": 0,
      "maxzoom": 14,
      "visible": false,
      "start": 2018,
      "end": 2020,
      "attribution": "Derived from DEM © KARS / State of Kansas"
    },

    {
      "id": "usgs_1894_larned",
      "title": "USGS Historic Topo — Larned (1894)",
      "group": "Historic Topographic Maps",
      "type": "raster",
      "url": "./tiles/usgs_1894_larned/{z}/{x}/{y}.png",
      "opacity": 0.7,
      "minzoom": 0,
      "maxzoom": 16,
      "visible": true,
      "start": 1894,
      "end": 1894,
      "attribution": "USGS Historical Topographic Maps (Public Domain)"
    },

    {
      "id": "railroads_1900",
      "title": "Railroads (c. 1900)",
      "group": "Vectors",
      "type": "geojson",
      "path": "../vectors/infrastructure/railroads_1900.geojson",
      "opacity": 1.0,
      "visible": true,
      "start": 1900,
      "end": 1900,
      "paint": {
        "line": { "line-color": "#d97706", "line-width": 1.6, "line-opacity": 0.95 }
      },
      "attribution": "Compiled rail lines circa 1900"
    },
    {
      "id": "treaties_1854",
      "title": "Treaty Boundaries (1854)",
      "group": "Vectors",
      "type": "geojson",
      "path": "../vectors/political/treaties_1854.geojson",
      "opacity": 0.85,
      "visible": true,
      "start": 1854,
      "end": 1854,
      "paint": {
        "fill": { "fill-color": "#2563eb", "fill-opacity": 0.25 },
        "line": { "line-color": "#1d4ed8", "line-width": 1.4, "line-opacity": 0.9 }
      },
      "attribution": "Digitized treaty boundaries, 1854"
    },

    {
      "id": "ksriv-channels",
      "title": "Kansas River — Channels",
      "group": "Hydrology",
      "type": "geojson",
      "path": "../data/processed/hydrology/kansas_river/channels.geojson",
      "opacity": 1.0,
      "visible": true,
      "start": 2000,
      "end": null,
      "paint": {
        "line": { "line-color": "#1e88e5", "line-width": 1.6, "line-opacity": 1.0 }
      },
      "attribution": "Kansas Geological Survey (KGS)"
    },
    {
      "id": "ksriv-floodplains",
      "title": "Kansas River — Floodplains",
      "group": "Hydrology",
      "type": "geojson",
      "path": "../data/processed/hydrology/kansas_river/floodplains.geojson",
      "opacity": 0.6,
      "visible": false,
      "start": 2000,
      "end": null,
      "paint": {
        "fill": { "fill-color": "#42a5f5", "fill-opacity": 0.25 },
        "line": { "line-color": "#1976d2", "line-width": 0.5, "line-opacity": 0.9 }
      },
      "attribution": "Kansas Geological Survey (KGS)"
    },
    {
      "id": "ksriv-gauges",
      "title": "Kansas River — Gauges",
      "group": "Hydrology",
      "type": "geojson",
      "path": "../data/processed/hydrology/kansas_river/gauges.geojson",
      "opacity": 1.0,
      "visible": false,
      "start": 2000,
      "end": null,
      "paint": {
        "circle": { "circle-color": "#0d47a1", "circle-radius": 4, "circle-opacity": 1.0 }
      },
      "attribution": "Kansas Geological Survey (KGS)"
    }
  ]
}
