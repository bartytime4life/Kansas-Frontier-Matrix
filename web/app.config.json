{
  "title": "Kansas-Frontier-Matrix",
  "subtitle": "Time-aware historical GIS for Kansas",
  "style": "https://demotiles.maplibre.org/style.json",
  "center": [-98.3, 38.5],
  "zoom": 6,

  "time": { "min": 1850, "max": 2025 },
  "defaultYear": 1930,

  "defaults": {
    "minzoom": 0,
    "maxzoom": 15,
    "tileSize": 256,
    "visible": true,
    "opacity": 1.0,
    "bounds": [-102.05, 36.99, -94.59, 40.00]
  },

  "layers": [
    {
      "id": "basemap_osm",
      "title": "Basemap — OpenStreetMap",
      "group": "Basemaps & Terrain",
      "type": "raster",
      "url": "https://tile.openstreetmap.org/{z}/{x}/{y}.png",
      "opacity": 1.0,
      "minzoom": 0,
      "maxzoom": 19,
      "visible": true,
      "attribution": "© OpenStreetMap contributors"
    },
    {
      "id": "ks_1m_hillshade",
      "title": "Hillshade (2018–2020)",
      "group": "Basemaps & Terrain",
      "type": "raster",
      "url": "./tiles/ks_hillshade/{z}/{x}/{y}.png",
      "opacity": 0.9,
      "minzoom": 0,
      "maxzoom": 14,
      "visible": true,
      "start": 2018,
      "end": 2020,
      "attribution": "DEM/Hillshade © KARS / State of Kansas"
    },
    {
      "id": "usgs_1894_larned",
      "title": "USGS Historic Topo — Larned (1894)",
      "group": "Historic Topographic Maps",
      "type": "raster",
      "url": "./tiles/usgs_1894_larned/{z}/{x}/{y}.png",
      "opacity": 0.7,
      "minzoom": 0,
      "maxzoom": 16,
      "visible": true,
      "start": 1894,
      "end": 1894,
      "attribution": "USGS Historical Topographic Maps (Public Domain)"
    },
    {
      "id": "railroads_1900",
      "title": "Railroads (c. 1900)",
      "group": "Vectors",
      "type": "vector",
      "url": "./vectors/infrastructure/railroads_1900.geojson",
      "opacity": 1.0,
      "visible": true,
      "start": 1900,
      "end": 1900,
      "paint": {
        "line": { "line-color": "#d97706", "line-width": 1.6, "line-opacity": 0.95 }
      },
      "attribution": "Compiled rail lines circa 1900"
    },
    {
      "id": "treaties_1854",
      "title": "Treaty Boundaries (1854)",
      "group": "Vectors",
      "type": "vector",
      "url": "./vectors/political/treaties_1854.geojson",
      "opacity": 0.85,
      "visible": true,
      "start": 1854,
      "end": 1854,
      "paint": {
        "fill":   { "fill-color": "#2563eb", "fill-opacity": 0.25 },
        "line":   { "line-color": "#1d4ed8", "line-width": 1.4, "line-opacity": 0.9 }
      },
      "attribution": "Digitized treaty boundaries, 1854"
    }
  ]
}
