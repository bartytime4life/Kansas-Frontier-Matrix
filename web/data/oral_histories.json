  "fields": {
    "title":     { "type": "string", "description": "Story title" },
    "narrator":  { "type": "string", "description": "Primary speaker/storyteller" },
    "community": { "type": "string", "description": "Originating community/tribe" },
    "summary":   { "type": "string", "description": "Short abstract" },
    "url":       { "type": "string", "format": "uri", "description": "Link to full record" },
    "date":      { "type": "string", "format": "date", "description": "ISO date (YYYY or YYYY-MM-DD)" },
    "time_start":{ "type": "string", "format": "date", "description": "Timeline start (usually = date)" },
    "time_end":  { "type": ["string", "null"], "format": "date", "description": "Timeline end (usually null)" },
    "source":    { "type": "string", "description": "Provenance / holding institution" },
    "license":   { "type": "string", "description": "Usage license" },
    "tags":      { "type": "array", "items": { "type": "string" }, "description": "Keywords" }
  },

  "search": { "qFields": ["title", "narrator", "community", "summary", "tags"] },

  "legendSymbol": "oral_histories",
  "attribution": "Community archives / Tribal partners"
