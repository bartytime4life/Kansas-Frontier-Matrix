  "hoverStyle": {
    "circleRadius": 1.5,
    "circleRadiusAdditive": true,
    "circleOpacity": 1.0
  },

  "selectedStyle": {
    "circleRadius": 2.5,
    "circleRadiusAdditive": true,
    "circleOpacity": 1.0,
    "circleStrokeWidth": 1.5
  },

  "cluster": {
    "enabled": true,
    "maxzoom": 8,
    "radius": 44,
    "color": "#2EC4B6",
    "textColor": "#FFFFFF"
  },

  "labels": {
    "textField": "{narrator}",
    "minzoom": 10,
    "maxzoom": 24,
    "textHaloWidth": 1.0
