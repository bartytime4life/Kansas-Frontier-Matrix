{
  "id": "oral_histories",
  "title": "Oral Histories & Narratives",
  "type": "vector",
  "data": "web/data/oral_histories_points.json",
  "category": "documents",

  "time": { "start": "1850-01-01", "end": null },
  "timeMapping": {
    "start": "time_start",
