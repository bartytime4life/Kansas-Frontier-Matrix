      "circle-color": "#2EC4B6",
      "circle-radius": 4,
      "circle-opacity": 0.9,
      "circle-stroke-color": "#FFFFFF",
      "circle-stroke-width": 1
    },
    "line": { "line-opacity": 0 },
    "fill": { "fill-opacity": 0 }
  },

  "fields": {
    "title":     { "type": "string", "description": "Story title" },
    "community": { "type": "string", "description": "Originating community/tribe" },
    "summary":   { "type": "string", "description": "Short abstract" },
    "url":       { "type": "string", "format": "uri", "description": "Link to full record" },
    "date":      { "type": "string", "format": "date", "description": "ISO date (YYYY or YYYY-MM-DD)" }
  }
}