  "zIndex": 60,

  "popup": ["title", "narrator", "community", "summary", "url", "date", "source"],

  "style": {
    "circleColor": "#2EC4B6",
    "circleRadius": 4,
    "circleOpacity": 0.9,
    "circleStrokeColor": "#FFFFFF",
    "circleStrokeWidth": 1
