{
  "id": "oral_histories",
  "title": "Oral Histories & Narratives",
  "type": "geojson",
  "url": "data/processed/oral_histories_points.json",
  "category": "documents",

  "time": { "start": "1850-01-01", "end": null },
  "timeProperty": "date",

  "popup": ["title", "community", "summary", "url"],

  "minzoom": 4,
  "maxzoom": 15,
  "visible": false,
  "legendSymbol": "oral_histories",
  "attribution": "Community archives / Tribal partners",

  "paint": {
