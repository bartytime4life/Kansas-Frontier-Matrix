{
  "id": "ks_landcover",
  "title": "Land Cover Snapshots",
  "type": "vector",
  "data": "web/data/landcover_timeslices.json",
  "category": "environment",

  "time": { "start": "1992-01-01", "end": "2021-12-31" },
  "timeMapping": {
    "start": "time_start",
    "end": "time_end"
  },

  "idProperty": "id",
  "interactive": true,
  "visible": false,

  "bounds": [-102.051, 36.993, -94.588, 40.003],
  "minzoom": 5,
  "maxzoom": 19,
  "opacity": 1.0,
  "zIndex": 20,

  "popup": ["year", "class_name", "nlcd", "area_km2", "source"],

  "style": {
    "fillOpacity": 0.6,
    "lineColor": "#000000",
    "lineOpacity": 0.08,
    "lineWidth": 0.2,
    "lineCap": "round",
    "lineJoin": "round"
  },

  "styleBy": [
    {
      "property": "nlcd",
      "palette": {
        "11": "#466B9F",
        "12": "#D1DEF8",
        "21": "#DECACA",
        "22": "#E29E8C",
        "23": "#FF0000",
        "24": "#B50000",
        "31": "#B3AC9F",
        "41": "#68AB5F",
        "42": "#1C5F2C",
        "43": "#B5C98E",
        "52": "#CCB879",
        "71": "#DFDF7F",
        "81": "#D1D182",
        "82": "#A57000",
        "90": "#00A8A8",
        "95": "#00DCDC"
      },
      "fillColorDefault": "#00000000"
    }
  ],

  "labels": {
    "textField": "{class_name}",
    "minzoom": 12,
    "maxzoom": 24,
    "textHaloWidth": 1.0
  },

  "fields": {
    "year":       { "type": "number", "description": "Snapshot year (1992–2021)" },
    "nlcd":       { "type": "number", "description": "NLCD class code (e.g., 11, 21, 42, 82)" },
    "lc_code":    { "type": "string", "description": "Alternate code field" },
    "class_code": { "type": "string", "description": "Alias of code for legend lookups" },
    "class_name": { "type": "string", "description": "Human-readable class name" },
    "area_km2":   { "type": "number", "units": "km²", "description": "Polygon area (optional; analytics)" },
    "source":     { "type": "string", "description": "Source/version (e.g., NLCD 2019 CONUS v2.1)" },
    "time_start": { "type": "string", "format": "date", "description": "Timeline start (YYYY-01-01)" },
    "time_end":   { "type": "string", "format": "date", "description": "Timeline end (YYYY-12-31)" }
  },

  "search": { "qFields": ["class_name", "year"] },

  "legend": {
    "title": "NLCD Land Cover",
    "items": [
      { "label": "11 Open Water",                   "fill": "#466B9F" },
      { "label": "12 Perennial Ice/Snow",           "fill": "#D1DEF8" },
      { "label": "21 Developed, Open Space",        "fill": "#DECACA" },
      { "label": "22 Developed, Low Intensity",     "fill": "#E29E8C" },
      { "label": "23 Developed, Medium Intensity",  "fill": "#FF0000" },
      { "label": "24 Developed, High Intensity",    "fill": "#B50000" },
      { "label": "31 Barren Land",                  "fill": "#B3AC9F" },
      { "label": "41 Deciduous Forest",             "fill": "#68AB5F" },
      { "label": "42 Evergreen Forest",             "fill": "#1C5F2C" },
      { "label": "43 Mixed Forest",                 "fill": "#B5C98E" },
      { "label": "52 Shrub/Scrub",                  "fill": "#CCB879" },
      { "label": "71 Grassland/Herbaceous",         "fill": "#DFDF7F" },
      { "label": "81 Pasture/Hay",                  "fill": "#D1D182" },
      { "label": "82 Cultivated Crops",             "fill": "#A57000" },
      { "label": "90 Woody Wetlands",               "fill": "#00A8A8" },
      { "label": "95 Emergent Herbaceous Wetlands", "fill": "#00DCDC" }
    ]
