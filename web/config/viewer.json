{
  "title": "Kansas-Frontier-Matrix",
  "subtitle": "Time · Terrain · History — Minimal Web Viewer",
  "legendTitle": "Map Layers",

  /* Optional MapLibre style:
     - URL string to a style.json or a full Style object.
     - If omitted, app.js falls back to OSM raster. */
  "style": null,

  /* Initial camera */
  "center": [-98.3000, 38.5000],
  "zoom": 6.0,
  "attributionControl": true,
  "navControl": true,

  /* Global defaults applied when a layer omits the property */
  "defaults": {
    "opacity": 1,
    "visible": true,
    "minzoom": 0,
    "maxzoom": 24,
    "tileSize": 256
  },

  /* Time settings (merged with ./config/time_config.json if present) */
  "time": {
    "min": 1700,
    "max": 2100,
    "step": 1,
    "defaultYear": 1900,
    "loop": true,
    "fps": 8
  },
  "defaultYear": 1900,

  /* Layers (self-contained so viewer.json works alone) */
  "layers": [
    {
      "id": "osm_basemap",
      "title": "OSM Basemap",
      "type": "raster",
      "tiles": ["https://tile.openstreetmap.org/{z}/{x}/{y}.png"],
      "attribution": "© OpenStreetMap contributors",
      "category": "Base",
      "visible": true
    },

    {
      "id": "usgs_topo_1894",
      "title": "USGS Topographic (Larned, 1894)",
      "type": "image",
      "url": "./data/overlays/usgs_topo_larned_1894.tif",
      "coordinates": [
        [-100.1, 38.6],
        [-98.8, 38.6],
        [-98.8, 37.9],
        [-100.1, 37.9]
      ],
      "start": 1894,
      "end": 1894,
      "opacity": 0.7,
      "category": "Historic Maps",
      "attribution": "USGS Historical Topo Map Collection",
      "visible": true
    },

    {
      "id": "ks_dem_2018",
      "title": "Kansas DEM (2018–2020)",
      "type": "raster",
      "tiles": ["./data/cogs/dem/ks_1m_dem_2018_2020/{z}/{x}/{y}.tif"],
      "start": 2018,
      "end": 2020,
      "opacity": 0.8,
      "category": "Elevation",
      "attribution": "Kansas GIS / USGS 3DEP",
      "visible": false
    },
    {
      "id": "ks_hillshade_2018",
      "title": "Hillshade (2018–2020)",
      "type": "raster",
      "tiles": ["./data/cogs/hillshade/ks_hillshade_2018_2020/{z}/{x}/{y}.tif"],
      "start": 2018,
      "end": 2020,
      "opacity": 0.6,
      "category": "Elevation",
      "attribution": "Derived from Kansas DEM",
      "visible": true
    },

    {
      "id": "kansas_counties",
      "title": "Kansas Counties",
      "type": "geojson",
      "url": "./data/kansas_counties.geojson",
      "opacity": 0.5,
      "category": "Boundaries",
      "attribution": "Kansas Data Access & Support Center",
      "visible": true,
      "paint": {
        "fill": { "fill-color": "#264653", "fill-opacity": 0.15 },
        "line": { "line-color": "#264653", "line-width": 1.0, "line-opacity": 0.6 }
      }
    },

    {
      "id": "events_sample",
      "title": "Sample Events",
      "type": "geojson",
      "url": "./data/demo_events.json",
      "start": 1800,
      "end": 1950,
      "opacity": 1,
      "category": "Events",
      "attribution": "Demo dataset",
      "visible": true,
      "paint": {
        "circle": { "circle-color": "#E63946", "circle-radius": 5, "circle-opacity": 0.9 }
      }
    }
  ]
}

